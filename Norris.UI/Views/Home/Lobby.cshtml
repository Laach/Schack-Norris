@using Norris.Data.Data.Entities
@using Norris.Data.Models
@model LobbyAndFriendsViewModel

@{
    ViewData["Title"] = "Lobby";
}
<h2>@ViewData["Title"]</h2>

<div class="row">
    <div class="col-sm-9">
        <table class="table">
            <tr>
                <td>USERNAME</td>
                <td>JOIN</td>
            </tr>
            @foreach(var item in Model.CurrentLobbyUsers)
            {
                <tr>
                    <td>@item.UserName</td>
                    <td>{JOIN BUTTON}</td>
                </tr>
            }

        </table>
        
    </div>
    <div class="col-sm-3">@await Html.PartialAsync("_FriendsPartial", Model.Friends)</div>
</div>


