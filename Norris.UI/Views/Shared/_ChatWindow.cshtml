@using Norris.Data.Models.DTO;
@using Norris.UI.Models;
@using Norris.Data.Data.Entities;
@model IEnumerable<ChatMessageDTO>

@if (Model != null)
{
    @foreach (var item in Model)
    {
      @if(@item.TimeStamp.Date == DateTime.Today)
      {
        <dt id="time-and-username"><small><em>Today @item.TimeStamp.ToString("h:mm tt")</em></small> <b>| @item.Username:</b></dt>
      }
      else
      {
        <dt id="time-and-username"><small><em>@item.TimeStamp.ToString("MM/dd h:mm tt")</em></small> <b>| @item.Username:</b></dt>
      }
    <dd class="msg" id="messages">@item.Message</dd>    
    }
}