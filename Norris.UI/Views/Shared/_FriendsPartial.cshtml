@using Norris.Data.Data.Entities
@using Norris.Data.Models.DTO

@model UserFriendsDTO

    <div>
        <div class="friends">
            Friends
            <ul class="list-group">
                <li class="list-group-item">Online</li>
                
                @if (Model.OnlineFriends.Any())
                {
                    foreach (var user in Model.OnlineFriends)
                    {
                        <li class="list-group-item"> @user.UserName </li>
                        
                    }
                }
                else
                {
                    //no friends
                }
            </ul>
        </div>
        <ul class="list-group friends">
            <li class="list-group-item">Offline</li>
            @if (Model.OfflineFriends.Any())
            {
                
                foreach (var user in Model.OfflineFriends)
                {
                    <li class="list-group-item disabled">@user.UserName</li>
                }
            }
            else
            {
                //no friends
            }
        </ul>
    </div>